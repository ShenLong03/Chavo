@model Chavo.Common.GeneralConfiguration
@{
    ViewBag.Title = "Contacto";
}


    <div class="container">
        <div class="row align-self-center justify-content-center">
            <div class="col-sm-12 col-md-5 align-self-center pt-5 pb-5 justify-content-center">
                <div class="panel container cuadro-border">
                    <div class="panel-heading pt-2">
                        <h5>@ViewBag.Title</h5>
                        <hr />
                    </div>
                    <div class="panel-body">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @Html.Raw(Model.MessageContactPage)
                        }
                        else
                        {
                            @Html.Raw(Model.MessageContactPage)
                        }
                        <address>
                            <strong>Email:</strong>   <a href="mailto:@Model.Email">@Model.Email</a><br />
                        </address>
                    </div>
                </div>

            </div>
        </div>
    </div>





