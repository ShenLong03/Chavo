@model IEnumerable<Chavo.Web.Data.Entity.SubCategory>

@{
    ViewBag.Title = "SubCategories";
}

<h4>@ViewBag.Title</h4>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<div>
    <div class="form-inline">
        @Html.Editor(" ", new { htmlAttributes = new { @class = "form-control buscar0", @placeholder = "Buscar..." } })
        <a href="@Url.Action("Create")" class="btn btn-primary filter" data-toggle="tooltip" data-placement="right" title="Crear Usuario"><span class="fa fa-user-plus"></span>&nbsp;Create</a>
    </div>
</div>
<hr />
<div class="table-responsive">
    <table class="table table-striped table-hover listIndex">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Picture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <small>
                        <a href="@Url.Action("Edit", new { id = item.SubCategoryId })"><i class="text-muted fa fa-pencil"></i></a>
                    </small>
                    &nbsp;<a href="@Url.Action("Details", new { id = item.SubCategoryId })">@item.Name</a>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Picture))
                    {
                        <img src="@Url.Content(item.Picture)" alt="Picture Profile" class="img-thumbnail rounded-circle img-profile-sm" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id=item.SubCategoryId})" class="btn btn-sm btn-warning"><span class="fa fa-pencil"></span>&nbsp;Edit</a>
                    <a onclick="return alertify.confirm('Confirm', 'You want to delete the record', function(){ location.href='@Url.Action("Delete",new { id=item.SubCategoryId})' }
                , function(){ alertify.error('Cancel')});" class="btn btn-sm btn-danger text-light"><span class="fa fa-remove"></span>&nbsp;Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
