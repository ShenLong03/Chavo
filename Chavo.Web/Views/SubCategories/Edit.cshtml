@model Chavo.Web.Models.SubCategoryViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Title</h2>
<h4>SubCategory</h4>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
    <li><a href="@Url.Action("Index")">SubCategories</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<hr />
@using (Html.BeginForm("Edit", "SubCategories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.SubCategoryId)
    @Html.HiddenFor(model => model.Picture)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    { Html.RenderPartial("_SubCategoryItems", Model); }
    <div class="col-md-6">
        <div class="form-horizontal">
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;Save</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fa fa-arrow-left"></i>&nbsp;To Back</a>
            </div>
        </div>
    </div>
}

