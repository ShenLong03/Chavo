@model Chavo.Web.Data.Entity.Customer

@{
    ViewBag.Title = "Products";
    Layout = null;
}

<h4>@ViewBag.Title</h4>
<div>
    <div class="form-inline">
        @Html.Editor(" ", new { htmlAttributes = new { @class = "form-control buscar0", @placeholder = "Buscar..." } })
        <a href="@Url.Action("CreateCustomerProduct", new { id=Model.CustomerId})" class="btn btn-primary filter" data-toggle="tooltip" data-placement="right" title="Crear Usuario"><span class="fa fa-user-plus"></span>&nbsp;Add</a>&nbsp;
        <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fa fa-arrow-left"></i>&nbsp;To Back</a>
    </div>
</div>
<hr />
<div class="table-responsive">
    <table class="table table-striped table-hover listIndex">
        <thead>
            <tr>
                <th>State</th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Product.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Product.Picture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Product.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Product.Serie)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Product.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Product.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Product.PriceAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Product.SubCategory.Category.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Product.SubCategory.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Product.Active)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
            <tr>
                <td>
                    <span class="badge @(item.StatePurchase==Chavo.Web.Data.Entity.StatePurchase.Comprado
                    ?"badge-warning"
                    :"badge-success")">
                        @Html.DisplayFor(modelItem => item.StatePurchase)
                    </span>
                </td>
                <td>
                    <small>
                        <a href="@Url.Action("EditCustomerProduct", new { id = item.CustomerProductId })"><i class="text-muted fa fa-pencil"></i></a>
                    </small>
                    &nbsp;<a href="@Url.Action("DetailsCustomerProduct", new { id = item.CustomerProductId })">@item.Product.Name</a>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Product.Picture))
                    {
                        <img src="@Url.Content(item.Product.Picture)" alt="Picture Profile" class="img-thumbnail rounded-circle img-profile-sm" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Serie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.PriceAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.SubCategory.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.SubCategory.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <a href="@Url.Action("EditCustomerProduct", new { id=item.CustomerProductId})" class="btn btn-sm btn-warning"><span class="fa fa-pencil"></span>&nbsp;Edit</a>
                    <a onclick="return alertify.confirm('Confirm', 'You want to delete the record', function(){ location.href='@Url.Action("DeleteCustomerProduct",new { id=item.CustomerProductId})' }
                    , function(){ alertify.error('Cancel')});" class="btn btn-sm btn-danger text-light"><span class="fa fa-remove"></span>&nbsp;Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
