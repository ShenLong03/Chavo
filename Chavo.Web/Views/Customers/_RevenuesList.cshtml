@model Chavo.Web.Data.Entity.Customer

@{
    ViewBag.Title = "Revenues";
    Layout = null;
}

<h4>@ViewBag.Title</h4>
<div>
    <div class="form-inline">
        @Html.Editor(" ", new { htmlAttributes = new { @class = "form-control buscar0", @placeholder = "Buscar..." } })
        <a href="@Url.Action("CreateRevenue", new { id=Model.CustomerId})" class="btn btn-primary filter" data-toggle="tooltip" data-placement="right" title="Crear"><span class="fa fa-plus"></span>&nbsp;Create</a>&nbsp;
        <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fa fa-arrow-left"></i>&nbsp;To Back</a>
    </div>
</div>
<hr />
<div class="table-responsive">
    <table class="table table-striped table-hover listIndex">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Revenues.FirstOrDefault().Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Revenues.FirstOrDefault().Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Revenues.FirstOrDefault().Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Revenues.FirstOrDefault().RevenueType)
                </th>
                <th>
                    Functionary
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Revenues.FirstOrDefault().Active)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Revenues)
            {
            <tr>
                <td>
                    <small>
                        <a href="@Url.Action("EditRevenue", new { id = item.RevenueId })"><i class="text-muted fa fa-pencil"></i></a>
                    </small>
                    &nbsp;<a href="@Url.Action("DetailsRevenue", new { id = item.RevenueId })">@item.Amount</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RevenueType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Functionary.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>    
                <td>
                    <a href="@Url.Action("EditRevenue", new { id=item.RevenueId})" class="btn btn-sm btn-warning"><span class="fa fa-pencil"></span>&nbsp;Edit</a>
                    <a onclick="return alertify.confirm('Confirm', 'You want to delete the record', function(){ location.href='@Url.Action("DeleteRevenue",new { id=item.RevenueId})' }
                    , function(){ alertify.error('Cancel')});" class="btn btn-sm btn-danger text-light"><span class="fa fa-remove"></span>&nbsp;Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
