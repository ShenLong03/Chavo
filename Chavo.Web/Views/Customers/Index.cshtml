@model IEnumerable<Chavo.Web.Data.Entity.Customer>

@{
    ViewBag.Title = "Customers";
}
<h4>@ViewBag.Title</h4>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<div>
    <div class="form-inline">
        @Html.Editor(" ", new { htmlAttributes = new { @class = "form-control buscar0", @placeholder = "Buscar..." } })
        <a href="@Url.Action("Create")" class="btn btn-primary filter" data-toggle="tooltip" data-placement="right" title="Crear Usuario"><span class="fa fa-user-plus"></span>&nbsp;Create</a>
        @*<a href="@Url.Action("CreateCliente")" class="btn btn-lg btn-floating raised-button btn-amaru-dark waves-effect" data-toggle="tooltip" data-placement="right" title="Crear nuevo"><span class="icon-plus"></span></a>*@
    </div>
</div>
<hr />
<div class="table-responsive">
    <table class="table table-striped table-hover listIndex">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Picture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AllName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Points)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CellPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Picture))
                        {
                            <img src="@Url.Content(item.Picture)" alt="Picture Profile" class="img-thumbnail rounded-circle img-profile-sm" />
                        }
                    </td>
                    <td>
                        <small>
                            <a href="@Url.Action("Edit", new { id = item.CustomerId })"><i class="text-muted fa fa-pencil"></i></a>
                        </small>
                        &nbsp;<a href="@Url.Action("Details", new { id = item.CustomerId })">@item.AllName</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Points)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CellPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id=item.CustomerId})" class="btn btn-sm btn-warning"><span class="fa fa-pencil"></span>&nbsp;Edit</a>
                        <a onclick="return alertify.confirm('Confirm', 'You want to delete the record', function(){ location.href='@Url.Action("Delete",new { id=item.CustomerId})' }
                , function(){ alertify.error('Cancel')});" class="btn btn-sm btn-danger text-light"><span class="fa fa-remove"></span>&nbsp;Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
