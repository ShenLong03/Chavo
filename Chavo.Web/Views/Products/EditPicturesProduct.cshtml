@model Chavo.Web.Models.PicturesProductViewModel

@{
    ViewBag.Title = "Edit";
    ViewBag.SubTitle = "Picture";
}
<h2>@ViewBag.Title</h2>
<h4>@ViewBag.SubTitle</h4>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
    <li><a href="@Url.Action("Index")">Products</a></li>
    <li><a href="@Url.Action("Details", new { id=Model.ProductId })">@Model.Product.Name</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<hr />
@{Html.RenderPartial("_Messages");}
@using (Html.BeginForm("EditPicturesProduct", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.PicturesProductId)
    @Html.HiddenFor(model => model.Picture)
    @Html.HiddenFor(model => model.ProductId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    { Html.RenderPartial("_PicturesProductItems", Model); }
    <div class="col-md-6">
        <div class="form-horizontal">
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;Save</button>
                <a href="@Url.Action("Details", new { id=Model.ProductId})" class="btn btn-secondary"><i class="fa fa-arrow-left"></i>&nbsp;To Back</a>
            </div>
        </div>
    </div>
}

