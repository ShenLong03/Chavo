@model IEnumerable<Chavo.Web.Data.Entity.Register>

@{
    ViewBag.Title = "Registers";
}

<h4>@ViewBag.Title</h4>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<div>
    <div class="form-inline">
        @Html.Editor(" ", new { htmlAttributes = new { @class = "form-control buscar0", @placeholder = "Buscar..." } })
        <a href="@Url.Action("Create")" class="btn btn-primary filter" data-toggle="tooltip" data-placement="right" title="Crear Usuario"><span class="fa fa-user-plus"></span>&nbsp;Create</a>
    </div>
</div>
<hr />
<div class="table-responsive">
    <table class="table table-striped table-hover listIndex">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transaction)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Approved)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ChangePassword)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <small>
                            <a href="@Url.Action("Edit", new { id = item.RegisterId })"><i class="text-muted fa fa-pencil"></i></a>
                        </small>
                        &nbsp;<a href="@Url.Action("Details", new { id = item.RegisterId })">@item.Email</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Transaction)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Approved)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChangePassword)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id=item.RegisterId})" class="btn btn-sm btn-warning"><span class="fa fa-pencil"></span>&nbsp;Edit</a>
                        <a onclick="return alertify.confirm('Confirm', 'You want to delete the record', function(){ location.href='@Url.Action("Delete",new { id=item.RegisterId})' }
                    , function(){ alertify.error('Cancel')});" class="btn btn-sm btn-danger text-light"><span class="fa fa-remove"></span>&nbsp;Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
