@model IEnumerable<Chavo.Web.Data.Entity.Weight>

@{
    ViewBag.Title = "Weights";
}
<h4>@ViewBag.Title</h4>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<div>
    <div class="form-inline">
        @Html.Editor(" ", new { htmlAttributes = new { @class = "form-control buscar0", @placeholder = "Buscar..." } })
        <a href="@Url.Action("Create")" class="btn btn-primary filter" data-toggle="tooltip" data-placement="right" title="Crear Usuario"><span class="fa fa-user-plus"></span>&nbsp;Create</a>
    </div>
</div>
<hr />
<div class="table-responsive">
    <table class="table table-striped table-hover listIndex">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nomenclature)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <small>
                        <a href="@Url.Action("Edit", new { id = item.WeightId })"><i class="text-muted fa fa-pencil"></i></a>
                    </small>
                    &nbsp;<a href="@Url.Action("Details", new { id = item.WeightId })">@item.Name</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nomenclature)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id=item.WeightId})" class="btn btn-sm btn-warning"><span class="fa fa-pencil"></span>&nbsp;Edit</a>
                    <a onclick="return alertify.confirm('Confirm', 'You want to delete the record', function(){ location.href='@Url.Action("Delete",new { id=item.WeightId})' }
                , function(){ alertify.error('Cancel')});" class="btn btn-sm btn-danger text-light"><span class="fa fa-remove"></span>&nbsp;Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

